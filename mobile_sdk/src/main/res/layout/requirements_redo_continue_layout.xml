<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/margin_20dp"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_requirements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TransparentButtonTextView"
        android:text="@string/requirements"
        android:paddingHorizontal="@dimen/dimen_0dp"
        android:paddingBottom="@dimen/dimen_4dp"
        android:background="@drawable/purple_dashed_line"
        android:layout_marginBottom="@dimen/margin_30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_redo_button"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_redo_button"
        style="@style/TransparentButtonTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_20dp"
        android:layout_marginBottom="@dimen/default_margin"
        app:layout_goneMarginBottom="@dimen/margin_30dp"
        android:background="@drawable/transparent_button_with_purple_stroke_background"
        android:foreground="@drawable/rectangular_button_ripple"
        android:text="@string/redo"
        tools:ignore="UnusedAttribute"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_continue_button"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_continue_button"
        style="@style/PurpleButtonTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_20dp"
        android:layout_marginBottom="@dimen/margin_30dp"
        android:background="@drawable/purple_button_background"
        android:foreground="@drawable/rectangular_button_ripple"
        android:text="@string/_continue"
        tools:ignore="UnusedAttribute"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>