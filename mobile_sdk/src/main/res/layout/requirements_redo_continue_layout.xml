<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dimen_20dp"
    android:paddingBottom="@dimen/dimen_30dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_requirements"
        style="@style/RequirementsTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/mb_redo"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mb_redo"
        style="@style/ShortTransparentMaterialButtonWithPurpleStroke"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:text="@string/redo_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_requirements"
        app:layout_constraintEnd_toStartOf="@+id/mb_continue"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mb_continue"
        style="@style/ShortPurpleMaterialButton"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:text="@string/_continue"
        app:layout_constraintStart_toEndOf="@+id/mb_redo"
        app:layout_constraintTop_toBottomOf="@+id/tv_requirements"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>