<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingTop="@dimen/margin_20dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_requirements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/PurpleTextView"
        android:text="@string/requirements"
        android:paddingBottom="@dimen/dimen_4dp"
        android:background="@drawable/purple_dashed_line"
        android:layout_marginBottom="@dimen/margin_30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/mb_redo"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mb_redo"
        style="@style/TransparentMaterialButtonWithPurpleStroke"
        android:layout_marginBottom="@dimen/default_margin"
        app:layout_goneMarginBottom="@dimen/margin_30dp"
        android:text="@string/redo_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/mb_continue"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mb_continue"
        style="@style/PurpleMaterialButton"
        android:layout_marginBottom="@dimen/margin_30dp"
        android:text="@string/_continue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>