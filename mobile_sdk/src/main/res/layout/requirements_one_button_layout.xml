<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dimen_20dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_requirements"
        style="@style/RequirementsTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/mb_continue"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mb_continue"
        style="@style/PurpleMaterialButton"
        android:layout_marginBottom="@dimen/dimen_30dp"
        android:text="@string/start_verification"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>