<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/margin_20dp"
    android:background="@color/white">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mb_complete"
        style="@style/PurpleMaterialButton"
        android:layout_marginBottom="@dimen/default_margin"
        app:layout_goneMarginBottom="@dimen/margin_30dp"
        android:text="@string/complete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/mb_try_again"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mb_try_again"
        style="@style/TransparentMaterialButtonWithPurpleStroke"
        android:layout_marginBottom="@dimen/margin_30dp"
        android:text="@string/try_again"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>