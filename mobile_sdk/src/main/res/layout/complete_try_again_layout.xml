<?xml version="1.0" encoding="utf-8"?>

<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_20dp"
        android:paddingBottom="@dimen/dimen_30dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mb_complete"
            style="@style/PurpleMaterialButton"
            android:text="@string/complete"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/mb_try_again"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mb_try_again"
            style="@style/TransparentMaterialButtonWithPurpleStroke"
            android:text="@string/try_again"
            android:layout_marginBottom="@dimen/dimen_0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            tools:visibility="visible"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</merge>
