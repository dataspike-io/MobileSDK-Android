<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MessageTextView">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/mont_regular</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="WhiteTopInstructionsTextView">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/mont_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:lineSpacingExtra">16dp</item>
    </style>

    <style name="BlackTopInstructionsTextView">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/mont_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:lineSpacingExtra">16dp</item>
    </style>

    <style name="VerificationCompleteScreenTitleTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/mont_semi_bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="OnboardingTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/mont_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

    <style name="VerificationCompleteScreenTextTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="fontFamily">@font/mont_regular</item>
        <item name="android:gravity">center</item>
        <item name="marginHorizontal">60dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

    <style name="BottomInstructionsTitleTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/mont_semi_bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="BottomInstructionsTextTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/mont_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

    <style name="PurpleMaterialButton">
        <item name="android:theme">@style/AppTheme</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/mont_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/purple_button_background</item>
        <item name="backgroundTint">@null</item>
        <item name="android:foreground">@drawable/rectangular_button_ripple</item>
        <item name="android:layout_marginLeft">@dimen/margin_20dp</item>
        <item name="android:layout_marginRight">@dimen/margin_20dp</item>
    </style>

    <style name="TransparentMaterialButtonWithPurpleStroke">
        <item name="android:theme">@style/AppTheme</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/ds_purple</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/mont_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/transparent_button_with_purple_stroke_background</item>
        <item name="android:foreground">@drawable/rectangular_button_ripple</item>
        <item name="android:layout_marginLeft">@dimen/margin_20dp</item>
        <item name="android:layout_marginRight">@dimen/margin_20dp</item>
    </style>

    <style name="PurpleTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/ds_purple</item>
        <item name="fontFamily">@font/mont_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LightGreyTextView">
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="fontFamily">@font/mont_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:lineSpacingExtra">@dimen/dimen_4dp</item>
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ContinueButtonTextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/ds_purple</item>
        <item name="fontFamily">@font/mont_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="UploadedTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/light_green</item>
        <item name="fontFamily">@font/mont_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DocumentInstructionTextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/mont_regular</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="DocumentInstructionTitleTextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="fontFamily">@font/mont_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:lineSpacingExtra">6dp</item>
    </style>

    <style name="UploadSuccessfulTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/light_green</item>
        <item name="fontFamily">@font/mont_regular</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="UploadWithErrorsTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/light_red</item>
        <item name="fontFamily">@font/mont_regular</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="roundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">14dp</item>
        <item name="cornerSize">14dp</item>
    </style>
</resources>