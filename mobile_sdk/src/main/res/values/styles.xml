<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MessageTextView">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/mont_regular</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="WhiteTopInstructionsTextView">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/mont_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:lineSpacingExtra">16dp</item>
    </style>

    <style name="BlackTopInstructionsTextView">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/mont_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:lineSpacingExtra">16dp</item>
    </style>

    <style name="VerificationCompleteScreenTitleTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/mont_semi_bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="OnboardingTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/mont_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

    <style name="VerificationCompleteScreenTextTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="fontFamily">@font/mont_regular</item>
        <item name="android:gravity">center</item>
        <item name="marginHorizontal">60dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

    <style name="BottomInstructionsTitleTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/mont_semi_bold</item>
