<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HomeScreenTitleTextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/mont_semi_bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="HomeScreenSubtitleTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/mont_semi_bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="HomeScreenInstructionTextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/mont_regular</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="PurpleMaterialButton">
        <item name="theme">@style/AppTheme</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/mont_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/purple_button_background</item>
        <item name="backgroundTint">@null</item>
        <item name="android:foreground">@drawable/rectangular_button_ripple</item>
        <item name="android:layout_marginLeft">@dimen/dimen_20dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_20dp</item>
    </style>
</resources>